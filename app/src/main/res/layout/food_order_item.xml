<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="40dp"
    android:measureWithLargestChild="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/dish_price"
        android:orientation="horizontal"
        android:layout_centerVertical="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dish_name"
        android:textStyle="italic"
        android:textColor="@color/blackSemitrasparent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18sp"
        android:text="asdlfhsdòlkfDKLAJFòDSJKLAFDJKFSDòKLJFDSòLKF P èp fè P+F fsd jsd"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|right"
        android:id="@+id/dish_price"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/quantity"

        android:textColor="@color/blackSemitrasparent"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:text="3.5€"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/quantity"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:layout_centerVertical="true">

        <ImageButton
            android:id="@+id/minus"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_remove_blue"
            android:rotation="180" />

        <TextView
            android:id="@+id/dish_quantity"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/blackSemitrasparent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/plus"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_add_blue"
            />

    </LinearLayout>
</RelativeLayout>
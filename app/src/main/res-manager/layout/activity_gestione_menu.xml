<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_view" android:layout_height="wrap_content" android:layout_width="match_parent"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_menu"
        app:tabMode="scrollable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/themeColor"
        app:tabTextColor="#d3d3d3"
        app:tabTextAppearance="@android:style/TextAppearance.Medium"
        app:tabGravity="center"
        android:textAlignment="center"
        app:tabSelectedTextColor="#ffffff"
        app:tabIndicatorColor="#4278c9"
        app:tabIndicatorHeight="5dp"
        android:minHeight="?attr/actionBarSize"
        android:fadingEdge="horizontal"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_menu"
        android:layout_below="@+id/tab_layout_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <include  layout="@layout/fat_buttons"  />

</RelativeLayout>

</LinearLayout>
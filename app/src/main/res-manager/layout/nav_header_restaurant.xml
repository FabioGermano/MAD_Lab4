<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar_restaurant"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <!-- android:theme="@style/ThemeOverlay.AppCompat.Dark">
-->

    <!-- PER ORA NON VIENE MAI USATO (USIAMO SOLO L'HEADER CLIENT),
        PERCHE' SONO IDENTICI: LOGO - NOME - EMAIL.
        SE SI VOGLIONO DIFFERENZIARE BISOGNA FARLO NEI VARI LAYOUT
        E NELLA BASE ACTIVITY QUANDO ANDIAMO A RIEMPIRLI
      -->
   <ImageView
         android:id="@+id/nav_drawer_logo"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingTop="@dimen/nav_header_vertical_spacing"
         android:src="@drawable/ic_account_circle_black_48dp" />
    <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingTop="@dimen/nav_header_vertical_spacing"
         android:id="@+id/nav_drawer_name"
         android:text="Nome Ristorante"
         android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    <TextView
         android:id="@+id/nav_drawer_email"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="email ristorante" />

</LinearLayout>